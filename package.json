  "bugs": {
    "url": "https://github.com/a-ng-d/figmug-utils/issues"
  },
  "homepage": "https://github.com/a-ng-d/figmug-utils#readme",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
